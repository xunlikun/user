
.img > image{
	display: block;
	float: left;
	width: 240rpx;
	height: 240rpx;
}
.productItem{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background: #fff;
}
.productItem > view {
	height: 240rpx;
}
.productItem > view.check {
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-content: center;
	        align-content: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.productItem > view.check > checkbox-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.productItem > view.check > checkbox-group > label {
	text-align: center;
}
.productItem > view.img {
	width: 240rpx;
	overflow: hidden;
}
.productItem > view.info {
	-webkit-box-flex: 4;
	-webkit-flex-grow: 4;
	        flex-grow: 4;
}

